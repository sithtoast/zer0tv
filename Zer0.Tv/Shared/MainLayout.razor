@inherits LayoutComponentBase

<PageTitle>Zer0.Tv</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar SearchTextChanged="SearchTextChanged" />

    <CascadingValue Value="SearchText">
        <MudMainContent>
            <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>
    </CascadingValue>
</MudLayout>

@code 
{
    public string? SearchText { get; set; }

    private void SearchTextChanged(string? searchText)
    {
        SearchText = searchText;
    }
}